{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:security": "eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc-security.js",
    "check-csrf-cookie": "node ./scripts/check_cookie_flags.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "test:e2e": "playwright test",
    "playwright:install": "playwright install --with-deps",
    "security:test": "snyk test --severity-threshold=medium",
    "security:code": "snyk code test --severity-threshold=medium",
    "security:audit": "npm audit --audit-level=moderate",
    "security:deps": "npm run security:test && npm run security:audit",
    "security:lint": "npm run lint:security",
    "security:all": "npm run security:deps && npm run security:code && npm run security:lint",
    "security:fix": "npm audit fix && snyk wizard",
    "security:monitor": "snyk monitor",
    "security:container": "snyk container test proofile-frontend:latest",
    "precommit": "npm run lint && npm run security:lint && npm run test:ci"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "@tanstack/query-sync-storage-persister": "^5.90.9",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-persist-client": "^5.90.9",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "axios-mock-adapter": "^1.21.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.12.0",
    "snyk": "^1.1300.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
